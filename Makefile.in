# Home directory - Path to R2P
HOMEDIR = /Users/rmc298/lib_builds/R2P/R2P

# Compiler and archiver
CC  = /usr/local/bin/gcc
CXX = /usr/local/bin/g++
LD  = /usr/local/bin/g++
AR  = ar rcv
RL  = ranlib

# Coverage executable
GCOV = /usr/local/bin/gcov
GCOVR = /anaconda/bin/gcovr

# Compiler flags
CPPFLAGS   = -std=c++11
LDFLAGS  =
DBGFLAGS =  -g -Wall -Wextra -Wnon-virtual-dtor -pedantic
OPTFLAGS = -O3 -ftree-vectorize -funroll-loops -pipe
COVFLAGS = $(DBGFLAGS) -coverage -fno-inline -fno-inline-small-functions -fno-default-inline
INCDIR = $(HOMEDIR)
				

# Average user should not need to change things there
# Only need to change if adding directories

SRCDIR = $(HOMEDIR)/src
LIBDIR  = $(HOMEDIR)/lib
OBJDIR  = $(HOMEDIR)/obj
DEPDIR = $(HOMEDIR)/dep
BINDIR  = $(HOMEDIR)/bin
DOCDIR = $(HOMEDIR)/docs
TSTDIR = $(HOMEDIR)/tests

TSTSRCDIR = $(TSTDIR)/src
TSTLIBDIR = $(TSTDIR)/lib
TSTBINDIR  = $(TSTDIR)/bin
COVERAGE = $(TSTDIR)/coverage
NUMBER_OF_SLASHES = 6 # Number of slashes in path to OBJDIR

vpath %.a $(LIBDIR)
vpath %.o $(OBJDIR)
